<% len = articles.length %>
<% articles.each_with_index do |resource, index| %>

<% if index%2 == 0 %>
<div class="flex-none sm:flex sm:space-x-8 sm:mx-0 mx-8">
<% end %>

<div id="rcalc-<%= index %><%= suffix %>" class="rcalc w-full sm:w-1/2 mb-6 bg-white border-flamingo-800 border-b-4 rounded-lg sm:py-0 py-2">
  <div id="card-<%= index %><%= suffix %>" class="company-card block my-2 px-4">
      <a href="/<%= resource.category.slug %>/<%= resource.slug %>" class="no-underline text-gray-700 hover:text-gray-700">
      <div class="my-2 sm:text-2xl text-xl font-medium text-black">
        <span class="mr-1 px-4 py-1 border rounded-full bg-gray-100 mb-1 text-base text-flamingo-800">#<%= index + 1 %></span>
      </div>
      <div class>
        <img class="mx-auto w-24 h-24" src="<%= resource.cover_image %>"/>
      </div>
      <div class="mx-1 my-4 text-center">
        <div class="sm:text-lg text-base">
          <%= resource.index_title %>
        </div>
      </div>
      </a>
  </div>
  <div id="card-<%= index %><%= suffix %>-hover" class="hidden company-card block my-2 px-4 pb-2">
      <a href="/<%= resource.category.slug %>/<%= resource.slug %>" class="no-underline text-gray-700 hover:text-gray-700">
      <div class="mx-1 my-6 h-12">
        <div class="sm:text-lg text-base text-center">
          <%= resource.index_title %>
        </div>
      </div>
      <% if resource.startup_stages.present? %>
      <div class="my-4">
      <% resource.startup_stages.each_with_index do |stage, index| %>
      <% if index < 2 %>
      <span class="mr-2 my-4 px-4 py-1 text-base text-flamingo-800 bg-yellow-100 border border-yellow-200 rounded-full">
        <%= stage.name %>
      </span>
      <% end %>
      <% end %>
      </div>
      <% end %>
      <% if resource.startup_functions.present? %>
      <div class="my-4">
      <% resource.startup_functions.each do |stage| %>
      <% if index < 2 %>
      <span class="mr-2 my-4 px-4 py-1 text-base text-flamingo-800 bg-blue-100 border border-blue-200 rounded-full">
        <%= stage.name %>
      </span>
      <% end %>
      <% end %>
      </div>
      <% end %>
      <% if resource.startup_topics.present? %>
      <div class="my-4">
      <% resource.startup_topics.each do |stage| %>
      <% if index < 2 %>
      <span class="mr-2 my-4 px-4 py-1 text-base text-flamingo-800 bg-pink-100 border border-pink-200 rounded-full">
        <%= stage.name %>
      </span>
      <% end %>
      <% end %>
      </div>
      <% end %>
      </a>
  </div>
</div>

<% if index%2 == 1 %>
</div>
<% elsif index == len - 1 %>
<div class="sm:w-1/2 mb-0">
</div>
</div>
<% end %>

<% end %>
