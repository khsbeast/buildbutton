<header class="header <%= @banner_transition ? "hidden fixed opacity-0 " : "sticky " %>md:flex bg-gray-100 w-screen top-0 z-50 shadow py-3">
  <div class="container navbar flex justify-between items-center md:flex top-section text-gray-700 font-medium text-base">
    <div class="font-bold md:text-xl text-base flex">
      <div class="flex items-center">
        <a class="no-underline" href="/">
          <img src="https://buildd.s3.amazonaws.com/Buildd.jpeg" class="w-9 border rounded-full float-left" />
        </a>
        <a class="text-gray-700 hover:text-flamingo-800 no-underline align-middle" href="/">&nbsp;buildd</a>
      </div>
    </div>
    <div class="hidden md:block md:w-2/3">
      <div class="subscribe_compressed_d px-2 float-right">
        <div class="px-4">
          <button
            class="subscribe_compressed_button_d group relative justify-center py-1 px-4 border border-transparent md:text-base leading-5 font-normal rounded-md text-white bg-flamingo-800 hover:bg-white hover:text-flamingo-800 hover:border-gray-700 transition duration-150 ease-in-out">Get one new handcrafted article each day!</button>
        </div>
      </div>
      <div class="subscribe_expand_d hidden">
        <%= form_with model: @newsletter_subscriber, url: create_newsletter_subscriber_path, local: true, class: "mt-1" do |f| %>
          <div class="flex space-x-2">
            <div class="w-1/3">
              <input
                name="newsletter_subscriber[name]"
                class="w-full bg-white appearance-none border border-gray-500 rounded py-1 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-azure-radiance-500"
                id="inline-full-name"
                type="text"
                placeholder="Name"
                required="required"
                oninvalid="this.setCustomValidity('Enter your name here')"
                oninput="this.setCustomValidity('')">
              </div>
              <div class="w-1/3">
                <input
                name="newsletter_subscriber[email]"
                class="w-full bg-white appearance-none border border-gray-500 rounded py-1 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-azure-radiance-500 required"
                id="inline-full-name"
                type="email"
                placeholder="Email"
                required="required"
                oninvalid="this.setCustomValidity('Enter your email here')"
                oninput="this.setCustomValidity('')">
                </div>
                <div class="w-1/3">
                  <button
                type="submit"
                class="w-full group relative justify-center py-0 px-4 border border-transparent md:text-lg leading-5 font-normal rounded-md text-white bg-flamingo-800 hover:bg-white hover:text-flamingo-800 hover:border-gray-700 transition duration-150 ease-in-out">Sign me up!</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
