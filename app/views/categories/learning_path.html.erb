<div class="flex-none md:flex md:mx-32 mx-4 md:my-8 my-2 md:space-x-8">
  <div class="md:w-1/3">
    <div class="md:hidden mb-2 text-center">
      <p class="font-bold text-lg px-4 py-1 bg-white border border-gray-300 rounded-lg">Filters</p>
    </div>
    <% filters_len = @filters.length %>
    <% @filters.each_with_index do |filter, index| %>
    <% if index%2 == 0 %>
    <div class="flex space-x-1 mb-1">
    <% end %>


      <div class="w-1/2 md:mb-0 mb-2">
      <a href="/<%= @path %>/<%= filter[1] %>" class="no-underline text-gray-700 hover:text-gray-700">
        <div class="md:py-6 py-2 px-2 border border-gray-400 <% if @filter.name == filter[0] %>bg-blue-100<% else %>bg-white <% end %> rounded-lg hover:bg-blue-100">
        <center>
        <div class="md:mb-4 mb-2">
          <img class="mx-auto w-16 h-16" src="<%= filter[2] %>" />
        </div>
        <%= filter[0] %>
        </center>
        </div>
      </a>
      </div>

    <% if index%2 == 1 %>
    </div>
    <% elsif index == filters_len - 1 %>
    <div class="w-1/2 mb-0">
    </div>
    </div>
    <% end %>

    <% end %>
  </div>
  <div class="md:w-2/3">
    <section class="mx-auto my-0">
      <% if @articles.present? %>
      <%= render 'shared/articles_2_in_row', articles:@articles, suffix:"a" %>
      <% else %>
      <div class="text-center">
        <p class="text-flamingo-800 text-xl">Coming Soon!</p>
      </div>
      <% end %>
    </section>
  </div>
</div>
