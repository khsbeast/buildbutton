<div class="flex-none sm:flex sm:mx-32 mx-4 sm:my-8 my-2 sm:space-x-8">
  <div class="sm:w-1/3">
    <% filters_len = @filters.length %>
    <% @filters.each_with_index do |filter, index| %>
    <% if index%2 == 0 %>
    <div class="sm:flex flex-none sm:space-x-1 mb-1">
    <% end %>


      <div class="sm:w-1/2 sm:mb-0 mb-2">
      <a href="/<%= @path %>/<%= filter[1] %>" class="no-underline text-gray-700 hover:text-gray-700">
        <div class="sm:py-6 py-2 px-2 border border-gray-400 <% if @filter.name == filter[0] %>bg-blue-100<% else %>bg-white <% end %> rounded-lg hover:bg-blue-100">
        <center>
        <div class="sm:mb-4 mb-2">
          <img class="mx-auto w-16 h-16" src="<%= filter[2] %>" />
        </div>
        <!--<div class="text-4xl sm:mb-4 mb-2">
          <%#= fa_icon @icons[index] %>
        </div>-->
        <%= filter[0] %>
        </center>
        </div>
      </a>
      </div>

    <% if index%2 == 1 %>
    </div>
    <% elsif index == filters_len - 1 %>
    <div class="sm:w-1/2 mb-0">
    </div>
    </div>
    <% end %>

    <% end %>
  </div>
  <div class="sm:w-2/3">
    <section class="mx-auto my-0">
      <%= render 'shared/articles_2_in_row', articles:@articles, suffix:"a" %>
    </section>
  </div>
</div>
