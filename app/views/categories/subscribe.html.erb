<style>
body {
  background-color: #fff;
}
</style>

<div class="mx-auto md:my-8 my-2">

<section class="mx-2 top-section mb-4 text-gray-700 body-font">
  <div class="text-center">
    <h1 class="max-w-6xl md:text-5xl text-2xl font-extrabold text-center title-font text-flamingo-800 m-auto py-2 leading-none tracking-tight"><span class="bg-flamingo-100 px-2 py-1">buildd</span> startups by learning lessons from real entrepreneurs</h1>
    <h2 class="max-w-6xl md:text-2xl text-lg font-light text-center title-font text-gray-700 m-auto pt-2 pb-8 max-w-3xl leading-snug tracking-tight">Your startup is unique. Design your own learning journey. We have you covered.</h2>
  </div>
</section>

<div class="bg-gray-200 rounded-3xl py-1 md:mb-24 mb-12 md:mx-8 mx-4">
  <div class="w-full flex-none -ml-full rounded-3xl transform shadow-lg bg-gradient-to-br from-flamingo-500 to-flamingo-800 -rotate-1">
  <section class="md:mx-24 mx-4 category-section mt-0 md:mt-4 mb-4 text-gray-700 body-font transform rotate-1">
    <div class="md:flex flex-none md:space-x-8 px-8 py-4">
      <div id="rcalc-1" class="rcalc w-full md:w-1/3 my-4 bg-white border-flamingo-800 border-b-4 rounded-lg py-2">
        <div id="card-1" class="company-card block md:my-4 px-2">
          <a href="/startup-stages/idea-validation" class="no-underline text-gray-700 hover:text-gray-700">
          <img class="mx-auto w-24 h-24 mt-8" src="https://buildd.s3.amazonaws.com/icons/startup-stages.svg"/>
          <h2 class="text-center pt-4 pb-2">Startup Stage</h2>
          <h3 class="text-center font-normal py-2 px-4">Learn lessons relevant to your startup's growth stage.</h3>
          </a>
        </div>
        <div id="card-1-hover" class="company-card hidden my-4 px-4">
          <a href="/startup-stages/idea-validation" class="no-underline text-gray-700 hover:text-gray-700">
            <% @startup_stages.each do |stages| %>
            <a href="/startup-stages/<%= stages[1] %>" class="no-underline text-gray-700 hover:text-gray-700"><p class="border border-gray-700 rounded-lg px-4 py-2 my-2 hover:bg-flamingo-800 hover:text-white"><%= fa_icon stages[2] %>&nbsp;&nbsp;<%= stages[0] %></p></a>
            <% end %>
          </a>
        </div>
      </div>
      <div id="rcalc-2" class="rcalc w-full md:w-1/3 my-4 bg-white border-flamingo-800 border-b-4 rounded-lg py-2">
        <div id="card-2" class="company-card block md:my-4 px-2">
          <a href="/startup-functions/sales" class="no-underline text-gray-700 hover:text-gray-700">
          <img class="mx-auto w-24 h-24 mt-8" src="https://buildd.s3.amazonaws.com/icons/startup-functions.svg"/>
          <h2 class="text-center pt-4 pb-2">Function</h2>
          <h3 class="text-center font-normal py-2 px-4">Which startup function is troubling you today? Let's resolve it.</h3>
          </a>
        </div>
        <div id="card-2-hover" class="company-card hidden my-4 px-4">
          <a href="/startup-functions/sales" class="no-underline text-gray-700 hover:text-gray-700">
            <% @startup_functions.each do |functions| %>
            <a href="/startup-functions/<%= functions[1] %>" class="no-underline text-gray-700 hover:text-gray-700"><p class="border border-gray-700 rounded-lg px-4 py-2 my-2 hover:bg-flamingo-800 hover:text-white"><%= fa_icon functions[2] %>&nbsp;&nbsp;<%= functions[0] %></p></a>
            <% end %>
          </a>
        </div>
      </div>
      <div id="rcalc-3" class="rcalc w-full md:w-1/3 my-4 bg-white border-flamingo-800 border-b-4 rounded-lg py-2">
        <div id="card-3" class="company-card block md:my-4 px-2">
          <a href="/startup-topics/hiring" class="no-underline text-gray-700 hover:text-gray-700">
          <img class="mx-auto w-24 h-24 mt-8" src="https://buildd.s3.amazonaws.com/icons/startup-topics.svg"/>
          <h2 class="text-center pt-4 pb-2">Topic</h2>
          <h3 class="text-center font-normal py-2 px-4">Want to learn a new topic? <br/>Here's a comprehensive list to read from.</h3>
          </a>
        </div>
        <div id="card-3-hover" class="company-card hidden my-4 px-4">
          <a href="/startup-topics/hiring" class="no-underline text-gray-700 hover:text-gray-700">
            <% @startup_topics.each_with_index do |topics| %>
            <a href="/startup-topics/<%= topics[1] %>" class="no-underline text-gray-700 hover:text-gray-700"><p class="border border-gray-700 rounded-lg px-4 py-2 my-2 hover:bg-flamingo-800 hover:text-white"><%= fa_icon topics[2] %>&nbsp;&nbsp;<%= topics[0] %></p></a>
            <% end %>
          </a>
        </div>
      </div>
    </div>
  </section>
  </div>
</div>

<!--Modal-->
<div class="modal fixed w-full h-full top-0 left-0 flex items-center justify-center">
    <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
    
    <div class="modal-container bg-white w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
      
      <div class="modal-close absolute top-0 right-0 cursor-pointer flex flex-col items-center mt-4 mr-4 text-white text-sm z-50">
        <svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
          <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
        </svg>
        <span class="text-sm">(Esc)</span>
      </div>

      <!-- Add margin if you want to see some of the overlay behind the modal-->
      <div class="modal-content py-4 text-left px-6">
        <!--Title-->
        <div class="flex justify-between items-center pb-3">
          <p class="text-2xl font-bold">Don't just dream. buildd your startup today.</p>
          <div class="modal-close cursor-pointer z-50">
            <svg class="fill-current text-black" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
              <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
            </svg>
          </div>
        </div>

        <!--Body-->
        <p>A new handcrafted piece of content each day.</p>
        <p>Startup analysis, tutorials lessons from our experience of bootstrapping our startup to $3M revenue.</p>

        <%= form_with model: @newsletter_subscriber, url: create_newsletter_subscriber_path, local: true, class: "mt-2" do |f| %>
        <center>
        <div class="md:flex mb-4">
            <div class="md:w-1/2 md:pr-2 w-full">
            <input
                name="newsletter_subscriber[name]"
                class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-azure-radiance-500"
                id="inline-full-name"
                type="text"
                placeholder="Name"
                required="required"
                oninvalid="this.setCustomValidity('Enter your name here')"
                oninput="this.setCustomValidity('')">
            </div>
            <div class="md:w-1/2 md:pl-2 w-full">
            <input
                name="newsletter_subscriber[email]"
                class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-azure-radiance-500 required"
                id="inline-full-name"
                type="email"
                placeholder="Email"
                required="required"
                oninvalid="this.setCustomValidity('Enter your email here')"
                oninput="this.setCustomValidity('')">
            </div>
        </div>
        <div class="md:w-full w-full pb-3">
            <button
                type="submit"
                class="group relative w-full flex justify-center py-2 px-4 border border-transparent md:text-xl text-lg leading-5 font-normal rounded-md text-white bg-flamingo-800 hover:bg-white hover:text-flamingo-800 hover:border-gray-700 transition duration-150 ease-in-out">I want to buildd</button>
        </div>
        </center>
        <% end %>
        <!--Footer-->
        <!--<div class="flex justify-end pt-2">
          <button class="px-4 bg-transparent p-3 rounded-lg text-indigo-500 hover:bg-gray-100 hover:text-indigo-400 mr-2">Action</button>
          <button class="modal-close px-4 bg-indigo-500 p-3 rounded-lg text-white hover:bg-indigo-400">Close</button>
        </div>-->
        
      </div>
    </div>
</div>

</div>