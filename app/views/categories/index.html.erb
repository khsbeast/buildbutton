<style>
  .company-card {
  /*box-shadow: 0 2px 4px 0 #e6c9f8, 0 2px 4px 0 #e6c9f8;*/
  border-radius: 0.85rem !important;
}
</style>
<div class="mx-auto sm:mx-32 mx-4">
<section class="sm:mx-2 mx-8 top-section mt-0 sm:mt-4 mb-4 text-gray-700 body-font">
    <div class="text-center">
      <h1 class="sm:text-6xl text-4xl font-extrabold text-center title-font text-flamingo-800 m-auto pt-8 pb-2 leading-none tracking-tight">Discover the best content on <%= @category.name %>.</h1>
      <h2 class="sm:text-2xl text-xl font-light text-center title-font text-gray-700 m-auto pt-2 pb-8 leading-snug tracking-tight">Find everything you need to know launch your startup faster - education, community, tools.</h2>
    </div>
</section>
<section class="mx-auto my-0 sm:my-4">
<% len = @category_articles.length %>
<% @category_articles.each_with_index do |resource, index| %>

<% if index%3 == 0 %>
<div class="flex-none sm:flex sm:space-x-8 sm:mx-0 mx-8">
<% end %>

<div id="rcalc-<%= index %>" class="rcalc w-full sm:w-1/3 sm:mb-2 mb-4 bg-gray-100 border-flamingo-800 border-b-4 rounded-lg">
  <div id="card-<%= index %>" class="company-card block my-2 px-4 py-2">
      <a href="/<%= resource.category.slug %>/<%= resource.slug %>" class="no-underline text-gray-700">
      <div class="my-2 sm:text-2xl text-xl font-medium text-black">
        <span class="mr-1 px-3 border rounded-full bg-gray-200 my-1 text-base text-flamingo-800">#<%= index + 1 %></span>
      </div>
      <div class="flex mb-4">
        <div class="w-full text-xl">
          <%= resource.index_title %>
        </div>
      </div>
      </a>
    </div>
</div>

<% if index%3 == 2 %>
</div>
<% elsif index == len - 1 %>
  <div class="sm:w-1/3 mb-0">
  </div>
  <% if index%3 == 0 %>
  <div class="sm:w-1/3 mb-0">
  </div>
  <% end %>
</div>
<% end %>

<% end %>
</section>
</div>
