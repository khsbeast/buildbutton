<% meta_tag("og_title", @resource.title) %>
<% meta_tag("og_description", @resource.meta_description) %>
<% meta_tag("og_url", request.url) %>
<% meta_tag("og_site_name", "Buildd.co") %>
<% meta_tag("og_twitter_title", @resource.title) %>
<% meta_tag("og_twitter_description", @resource.meta_description) %>

<style>
html, body {
  font-family: 'DM Sans', sans-serif !important;
}
.top-section. .navbar {
  font-family: 'Inter', sans-serif;
}
</style>
<div class="sm:mx-auto mx-3 mt-8 sm:mx-32 mx-4">
